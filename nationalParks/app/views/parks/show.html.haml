%p#notice= notice

%ul#parkheading
 %li
  %b Parkname:
  = @park.parkname
 %li
  %b Location:
  = @park.location
%ul#parkdetails
 %li
  %b Info:
  = @park.info

%br

%ul#links
 = link_to 'Edit', edit_park_path(@park)
 \|
 = link_to 'Back', parks_path
 \|
 = link_to 'Add to visited parks', users_avp_path(@park)

%table#microposts
 %thead
  %tr
   %th Content
   %th User
 %tbody
  - @microposts.each do |post|
   %tr
    %td= post.content
    %td= post.user

= link_to 'Add new post', new_micropost_path


