%p#notice= notice

%ul#parkheading
 %li
  %b Parkname:
  = @park.parkname
 %li
  %b Location:
  = @park.location
%ul#lines
%ul#parkdetails
 %li
  %b Info:
  = @park.info

%br

%ul#links
 = link_to 'Edit', edit_park_path(@park)
 \|
 = link_to 'Back', parks_path
 \|
 - if user_signed_in?
  = link_to 'Add to visited parks', profiles_path(:id => current_user.id, :add_to_visited_parks => @park.parkname + ": " + @park.location)
 - else
  = link_to 'Add to visited parks', new_user_registration_path

%ul#lines
 %h3#posttitle
  Microposts
%table#microposts
 %thead
  %tr
   %th Content
   %th User
 %tbody
  - @microposts.each do |post|
   %tr
    %td= post.content
    %td= post.user
%ul#lines

= link_to 'Add new post', new_micropost_path


