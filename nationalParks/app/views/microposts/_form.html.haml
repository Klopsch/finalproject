= form_for @micropost do |f|
  - if @micropost.errors.any?
    #error_explanation
      %h2= "#{pluralize(@micropost.errors.count, "error")} prohibited this micropost from being saved:"
      %ul
        - @micropost.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = radio_button_tag(:tag, "Weather")
    = label_tag(:tag, "Weather")
    = radio_button_tag(:tag, "Camping")
    = label_tag(:tag, "Camping")
    = radio_button_tag(:tag, "Hiking")
    = label_tag(:tag, "Hiking")
    = radio_button_tag(:tag, "Traffic")
    = label_tag(:tag, "Traffic")
  .actions
    = f.submit 'Save'
