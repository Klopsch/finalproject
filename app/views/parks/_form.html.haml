= form_for @park do |f|
  - if @park.errors.any?
    #error_explanation
      %h2= "#{pluralize(@park.errors.count, "error")} prohibited this park from being saved:"
      %ul
        - @park.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :parkname
    = f.text_field :parkname
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :info
    = f.text_field :info
  .actions
    = f.submit 'Save'
